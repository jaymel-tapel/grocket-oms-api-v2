    "cloudinary": "^2.0.0-rc",
    "config": "^3.3.9",
    "nest-commander": "^3.12.5",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "prisma-extension-soft-delete": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
